{
  "name": "React + Vite Development",
  "dockerComposeFile": "compose.yaml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "forwardPorts": [5173, 9200],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "9200": {
      "label": "OpenSearch",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "npm install",

  "remoteUser": "node",
  
  "mounts": [
    "source=${localWorkspaceFolder}/.idea,target=${containerWorkspaceFolder}/.idea,type=bind,consistency=cached"
  ]
}
